<html>

  <head>
    <title>3VOT - <%= @profile.marketing.name %></title>
    <link rel='shortcut icon' type='image/x-icon' href='https://s3.amazonaws.com/3vot.com/images/favicon.ico' />
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <link rel="stylesheet" media="screen" href="https://netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css">
      <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
  </head>

  <style>
    body {
      background-image: url(https://s3.amazonaws.com/3vot.com/images/3vot-profile-bg.jpg);
      background-repeat: repeat-x;
      background-position: top center;
      -webkit-background-size: cover;
      background-size: cover;
      background-attachment: fixed;
      font-family: 'Open Sans', sans-serif;
    }

    .btn {
      -webkit-box-shadow: 0 2px 2px rgba(0,0,0,.2);
      -moz-box-shadow: 0 2px 2px rgba(0,0,0,.2);
      box-shadow: 0 2px 2px rgba(0,0,0,.2);
      border: none;
    }

    .btn-warning {
      background-color: #ffb83b;
      text-shadow: 0 1px 1px rgba(0,0,0,.2);
    }

    .small-icon {
      height: 15px;
      display: inline-block;
    }

    .navbar-inverse .navbar-brand {
      color: #fff;
    }
    .navbar-inverse {
      background-color: transparent;
      border: none;
      padding-top: 20px;
    }
    .navbar-inverse .navbar-nav>li>a {
      color: #fff;
      font-size: 18px;
      text-shadow: 0 1px 2px rgba(0,0,0,.4);
    }

    .navbar-inverse .navbar-link {
      font-size: 30px;
      font-weight: 300;
      color: #fff;
      margin: 5px 20px 0;
      text-shadow: 0 1px 2px rgba(0,0,0,.3);
    }

    .nav>li>a:hover, .nav>li>a:focus, nav>a:hover, nav>a:focus {
      text-decoration: none;
      background-color: transparent;
    }

    .logo {
      background: url(https://s3.amazonaws.com/3vot.com/images/3vot-logo-white.png);
      background-repeat: no-repeat;
      -webkit-background-size: cover;
      background-size: cover;
     }

     .navbar-brand  {
      width:82px;
      height:42px;
      margin-top: 5px;
     }

     .market-item {
      position: relative;
     }

     .market-item .market-popover{
      opacity: 0;
      position: absolute;
      -webkit-transition: all .2s;
      -moz-transition: all .2s;
      -ms-transition: all .2s;
      -o-transition: all .2s;
      transition: all .2s;
      background: #fff;
      height: 0px;
      -webkit-border-radius: 8px;
      -moz-border-radius: 8px;
      border-radius: 8px;
      width: 260px;
      right: 0;
      text-align: center;
      overflow: hidden;
      border-bottom: 2px solid rgba(0,0,0,.4);
      border-top: 1px solid rgba(255,255,255,0.1);
      -webkit-box-shadow: 0 5px 10px rgba(0,0,0,.3);
      -moz-box-shadow: 0 5px 10px rgba(0,0,0,.3);
      box-shadow: 0 5px 10px rgba(0,0,0,.3);

     }

     .market-item:hover .market-popover {
      opacity: 1;
      height:150px;
     }
     .market-popover .popover-header {
      background-color: #ffb83b;
      background-image:url(https://s3.amazonaws.com/3vot.com/images/3vot-market-popover-bg.jpg);
      background-repeat: repeat;
      -webkit-background-size: 260px auto;
      background-size: 260px auto;
      color: #fff;
      -webkit-box-shadow: inset 0 10px 10px rgba(255,255,255,.3);
      -moz-box-shadow: inset 0 10px 10px rgba(255,255,255,.3);
      box-shadow: inset 0 10px 10px rgba(255,255,255,.3);
      animation:bgloop 10s;
      -moz-animation:bgloop 10s linear infinite; 
      -webkit-animation:bgloop 10s linear infinite; 
     }

     .popover-header h3 {
      margin:0; 
      line-height:82px; 
      font-weight:300;
      font-size: 30px;
      text-shadow: 0 1px 2px rgba(0,0,0,.2);
     }

     .market-popover p {
      color: #77787b;
      font-size: 12px;
      padding: 7px 10px;
     }

     .market-disabled {
      opacity: .5;
     }

      @-moz-keyframes bgloop /* Firefox */
        {
          0%   {background-position:0px 0px ;}
          100%   {background-position:0px 179px;}
        }

      @-webkit-keyframes bgloop /* Safari and Chrome */
        {
          0%   {background-position:0px 0px ;}
          100%   {background-position:0px 179px;}
        }
     

     .profile-container {
      background-color: #f5f5f6;
      background-image: url(https://s3.amazonaws.com/3vot.com/images/3vot-profile-grad-bg.jpg);
      background-position: top left;
      background-repeat: repeat-x;
      margin-top: 130px;
      -webkit-box-shadow: 0 -2px 10px rgba(0,0,0,.1) ,0 -30px 50px rgba(0,0,0,.1);
      -moz-box-shadow: 0 -2px 10px rgba(0,0,0,.1) ,0 -30px 50px rgba(0,0,0,.1);
      box-shadow: 0 -2px 10px rgba(0,0,0,.1) ,0 -30px 50px rgba(0,0,0,.1);
      padding-bottom: 50px;
     }

     header {
      margin-top: -150px;
      text-align: center;
     }

     .profile-img-container {
      width:20%; 
      display:inline-block
     }

     .profile-img {
      width: 100%;
     }

     .text-inverse {
        color:#fff;
     }

     .header-details {
      display: inline-block;
      margin: 0 10px;
      width: 70px;
     }

     .page-header {
      color:#333333;
      border: none;
      font-weight: 300;
      margin: 10px 0 0px;
      text-shadow: 0 2px 0 #fff;
     }
      .stores {
      padding-top: 10px;
      max-width: 1000px;
      margin: auto;
      text-align: center;
     }

/*
     .store-list {
      list-style: none;
      padding: 0;
      line-height: 40px
     }

     .store-list a {
      color: #cccccc;
      font-weight: 600;
      border-bottom: 1px solid #cccccc;
      display: block;
      font-size: 18px; 
      text-shadow: 0 3px 0 #fff;
      -webkit-transition: all  .2s;
       -moz-transition: all  .2s;
       -ms-transition: all  .2s;
       -o-transition: all  .2s;
       transition: all  .2s; 
     }
     .store-list a:hover, .store-list a:focus, .store-list a.active {
      text-decoration: none;
      color: #77787b;
      border-bottom: 1px solid #77787b;
     }
*/

    .store-menu, .store-menu-mobile {
      min-height: 42px;
      height: 42px;
      margin-bottom: 30px;
      text-align: left;
    }

    .navbar-default , .store-menu-mobile .form-control {
      background-color: #f8f8f8;
      background-image:linear-gradient(#fff, #f5f5f6);
      -webkit-box-shadow: 0 2px 2px rgba(0,0,0,.2);
      -moz-box-shadow: 0 2px 2px rgba(0,0,0,.2);
      box-shadow: 0 2px 2px rgba(0,0,0,.2);
      -webkit-border-radius: 10px;
      -moz-border-radius: 10px;
      border-radius: 10px;
      border-bottom: 1px solid #fff; 
      border: none;    
    }
    .navbar-default .navbar-nav>li>a {
      color:#cccccc;
      font-size: 18px;
      text-shadow: 0 1px 0 #fff;
      font-weight: 400;
      padding: 10px 15px 11px;
    }
    .navbar-default .navbar-nav >li>a.disabled {
      color: #8a8c8e;
      padding-right: 20px;
      border-right: 1px solid #e6e6e6;
    }
    .navbar-default .navbar-nav>li>a.active, .store-menu-mobile .form-control {
      font-weight: 600;
      color: #636466;
    }

     .appstore-app {
      display: inline-block;
      cursor: pointer;
      width: 225px;
      height: 160px;
      background: #fff;
      padding: 10px;
      text-align: left;
      border-bottom: 2px solid #f1f2f2;
      -webkit-box-shadow: 0 2px 2px rgba(0,0,0,.3);
      -moz-box-shadow: 0 2px 2px rgba(0,0,0,.3);
      box-shadow: 0 2px 2px rgba(0,0,0,.3);
      -webkit-border-radius: 5px;
      -moz-border-radius: 5px;
      border-radius: 5px;
      margin: 0 1% 30px;
      -webkit-transition: all .2s;
      -moz-transition: all .2s;
      -ms-transition: all .2s;
      -o-transition: all .2s;
      transition: all .2s;
     }

     .appstore-app:hover {
      -webkit-transform: scale(1.1);
     }
     .appstore-app div {
      display: inline-block;
      vertical-align: top;
     }

     .app-header {
      display: inline-block;
      width: 120px;
      padding-bottom: 5px;
     }

     .appstore-app h3 {
      margin: 0;
      font-size: 16px;
      font-weight: 600;
      display: block;
      overflow: hidden;
      height: 40px;
      line-height: 1.2;
      text-transform: uppercase;
      margin-bottom: 7px;
     }

     .app-icon {
      -webkit-background-size: cover;
      background-size: cover;
      width: 69px;
      height: 69px;
      margin-right: 10px
     }

     .app-icon-blue {
        background-image: url(https://s3.amazonaws.com/3vot.com/images/app-icon-blue.png);   
     }
     .app-icon-red {
        background-image: url(https://s3.amazonaws.com/3vot.com/images/app-icon-red.png);   
     }
     .app-icon-green {
        background-image: url(https://s3.amazonaws.com/3vot.com/images/app-icon-green.png);   
     }

     .appstore-app p {
      font-size: 10px;
      color: #77787b;
      border-top: 1px solid #e6e6e6;
      padding-top: 5px;
      margin-top: 10px;
     }

     .store-menu-mobile {
      display: none;

     }

    @media (max-width: 1200px) and (min-width: 0px) {
      .container {
        width: 95%;
      }
      .navbar-nav {
        display: inline-block;
        margin: 0;
      }
      .navbar-nav li {
        display: inline-block;
      }

      .apps-container {
        text-align: center;
      }
      .appstore-app {
        text-align: left
      }
      .profile-img-container {
        width: 230px;
      }
    }

    @media (max-width: 1024px) and (min-width: 0px){
      .container {
        width:90%;
      }

      .apps-container {
        display: inline-block;
        vertical-align: top;
        text-align: center;
      }
      
      .appstore-app {
        margin: 0 1% 20px;
        text-align: left;
      }
    }

    @media (max-width: 767px) and (min-width: 0px) {
      .navbar-header {
        display: inline-block;
        float: left
      }
      .navbar-right {
        float: right;
      }
      .store-menu {
        display: none;
      }
      .store-menu-mobile{
        display: block;
      }

      .market-disabled span {
        display: none;
      }

      .apps-container {
        text-align: center;
        width:100%;
      }
      .appstore-app {
        text-align: left;
        width: 47%;
        height: auto;
        padding: 10px;
      }
      .appstore-app .app-header {
        width: 58%;
      }
      .appstore-app h3 {
        height: 38px;
        display: inline-block;
      }
      .appstore-app .app-header a {
        padding: 5px 10px;
        font-size: 16px;
      }
      .appstore-app p {
        font-size: 12px;
        margin-bottom: 0;
      }
    }

    @media (max-width:480px) and (min-width:0px) {
      .navbar-inverse {
        padding: 0;
      }
      .navbar-profile-name {
        display: none;
      }
      .navbar-header {
        display: block;
        float: none;
        text-align: center;
      }
      .navbar-brand {
        float: none;
        display: inline-block;
        width: 60px;
        height: 33px;
        right: 4px;
        position: relative;
      }
      .navbar-right {
        float: right;
      }
      .profile-img-container {
        width:120px; 
      }
      
      .market-item .market-popover{
        right: 10px
      }
      .profile-container{
        margin-top: 55px;
      }
      header {
        margin-top: -88px;
      }
      .page-header {
        margin: 5px 0 0px;
      }

      .market-popover p span{
        display: block;
      }
      .appstore-app .app-icon {
        width: 80px;
        height: 80px;
      }
      .header-details {
        margin: 0;
        width: 25%;
        text-align: center;
      }
      .appstore-app {
        width: 95%;
        padding: 20px;
      }


    }

  </style>

  <body>
    <div class="page">

      <div class="container">
        <div class="row">
          <nav class="navbar navbar-inverse col-md-12 col-sm-12 col-xs-12" role="navigation">
            <div class="navbar-header">
              <a class="navbar-brand logo" href="#"></a>
            </div>
            <a href="" class="navbar-link pull-left navbar-profile-name" style="cursor:text"><%= @profile.marketing.name %></a>
          </nav><!-- Navbar -->
        </div><!--Row-->
      </div><!--Nav .Container-->

      <div class="profile-container">
        <div class="container">
          <header>

            <div class="row">
              <div class="text-center text-inverse header-details" >
                <img src="https://s3.amazonaws.com/3vot.com/images/3vot-icon-cloud.png" alt="" style="width:25px; display:block; margin:auto">
                <span>Apps</span>
              </div>
              <div class="text-center profile-img-container">                
                <img class="profile-img" src="https://s3.amazonaws.com/3vot.com/images/3vot-profile-img.png" alt="">
              </div>
              <div class="text-center text-inverse header-details" >
                <img src="https://s3.amazonaws.com/3vot.com/images/3vot-icon-cloud.png" alt="" style="width:35px; display:block; margin:auto">
                <span>Stores</span>
              </div>
            </div><!-- Row -->

            <div class="row">
              <h1 class="page-header"><%= @profile.marketing.name %></h1>
              <p style="font-size: 18px;color: #8a8c8e;">Welcome to our profile. <span>Select the app you want to use.</span></p>
            </div><!-- Row -->

          </header>

          <section class="stores">
            
            <div class="row">
              <div class="store-menu navbar navbar-default col-md-12" role="navigation">
                <ul class="nav navbar-nav">
                  <li><a href="#" class="disabled">Stores</a></li>
                </ul>
                <ul class="nav navbar-nav">
                  <% for store in @stores: %>
                    <li><a href=""><%= store.marketing.name %></a></li>
                  <% end %>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                  <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                      <img class="small-icon" src="https://s3.amazonaws.com/3vot.com/images/3vot-icon-arrowdown.png" alt="">
                    </a>
                    <ul class="dropdown-menu">
                       <% for store in @stores: %>
                        <li><a href=""><%= store.marketing.name %></a></li>
                      <% end %>
                    </ul>
                  </li>
                </ul>
              </div><!-- Store Menu Navbar -->

              <div class="store-menu-mobile">
                <select name="" id="input" class="form-control">
                  <option value="">All Apps</option>
                   <% for store in @stores: %>
                    <option value=""><%= store.marketing.name %></option>
                  <% end %>
                </select>
              </div><!-- Store Menu Mobile-->

            </div>
            <div class="row">
              <div class="apps-container">
              
                <% for app in store.attributes?.apps: %>
                <div class="appstore-app">
                  <div class="app-icon app-icon-blue"></div>
                  <div class="app-header">
                    <h3><%= app.name %></h3>
                    <a href="" class="btn btn-xs btn-warning">Open App <img class="small-icon" src="https://s3.amazonaws.com/3vot.com/images/3vot-icon-arrowright.png" alt=""></a>
                  </div>
                  <p><%= app.description %>
                  </p>
                </div>
                <% end %>
                
              </div>
               
              </div>
            </div>

          </section>

        </div>
          
      </div>

    </div><!-- Container -->

    <script src="https://code.jquery.com/jquery.js"></script>
    <script src="https://netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script>
  </body>
</html>